<%= render :partial => "shared/navbar.erb" %>
<div class="tweets">
	<h1><%= image_tag(@tweet.photo) %>&nbsp;<strong><%= @tweet.username %></h1>

	<%= render partial: "tweets/button_list" %>

	<section class="row tweet">
    <div class="col-sm-4">
      <p><%= @tweet.text %></p>
    </div>
    <div class="col-sm-8">
      <img width="500px" src=<%= @tweet.media %> />
    </div>
    <div class="like">
      <% if user_signed_in? %>
        <% if @tweet.liked_by?(current_user) %>
          <center><input type="button" value="unlike" onclick="current_user.unlike!(@tweet)"></center>
        <% else %>
          <center><input type="button" value="like" onclick="current_user.like!(@tweet)"></center>
        <% end %>
      <% else %>
        <p>Vous devez être connecté(e) pour liker le tweet.</p>
      <% end %>
    </div>

  </section>

  <div class="comment-instruction">
    <% if user_signed_in? %>
      <%= render partial: "comments/form", locals: { tweet: @tweet, comment: @new_comment } %>
    <% else %>
      <p>Vous devez être connecté(e) pour laisser un commentaire.</p>
    <% end %>
  </div>

  <div class="comments">
    <% if @tweet.comments.any? %>
      <h2>Commentaires :</h2>

      <% @tweet.comments.each do |comment| %>
        <%= render partial: "comments/show", locals: { comment: comment } %>
      <% end %>
    <% end %>
  </div>
</div>