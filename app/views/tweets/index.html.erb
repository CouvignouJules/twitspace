<h1>Tweets :</h1>

<%- @tweets.each do |tweet| -%>
  <div style="border: 1px solid #B4BCDB; margin: 10px;">
    <p><img src=<%= tweet.photo %> />&nbsp;<strong><%= tweet.username %></strong></p>
    <p><%= tweet.text %></p>
    <% if tweet.media != "#" %> <img width="350px" src=<%= tweet.media %> /> <% end %>
  </div>
<% end %>