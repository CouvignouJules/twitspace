<%= render :partial => "shared/navbar.erb" %>
<h1>Tweets les plus récents :</h1>
<%= paginate @tweets %>

<br />

<%- @tweets.each do |tweet| if (tweet.media != '#') -%>
	<%= link_to(image_tag(tweet.media), tweet_path(tweet), :class => "tweets") %> <% end %>
<% end %>

<br /><br /><br />
<h1>Tweets par popularité :</h1>
<%= paginate @tweets_pop, param_name: "page_pop" %>

<br />

<%- @tweets_pop.each do |tweet| if (tweet.media != '#') -%>
	<%= link_to(image_tag(tweet.media), tweet_path(tweet), :class => "tweets") %> <% end %>
<% end %>